<div class="mt-5">
<h1>Create new restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit class: "btn btn-primary my-2" %>
<% end %>
</div>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
