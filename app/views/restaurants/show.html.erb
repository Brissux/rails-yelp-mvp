<h1 class="mt-3"><%= @restaurant.name  %></h1>
<p><%= @restaurant.address  %></p>
<p><%= @restaurant.phone_number %></p>
<p><%=  @restaurant.category%></p>
<%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-primary my-2" %>

<div>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
</div>

<h2 class="text-center my-2">Review</h2>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
  <div class="my-2">
    <li class="list-group-item">
      <%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
    </div>
  <% end %>
</ul>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
